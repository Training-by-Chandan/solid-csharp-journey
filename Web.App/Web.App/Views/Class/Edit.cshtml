@model Classes

<div class="row">
   <form method="post" action="/class/edit">
       <input type="hidden" asp-for="Id" />
       <div class="form-group">
           <label class="control-label">Name</label>
           <input asp-for="Name" type="text" class="form-control" name="Name" />
       </div>
        <div class="form-group">
           <label class="control-label">Description</label>
           <textarea asp-for="Description" class="form-control" name="Description"></textarea>
       </div>
       <div class="form-group">
           &nbsp;
       </div>
        <div class="form-group">
            <a href="/class/index" class="btn btn-primary">Back to Index</a>
           <input type="submit" value="Edit" class="btn btn-success" />
           <input type="reset" value="Reset" class="btn btn-danger" />
       </div>
   </form>
</div>